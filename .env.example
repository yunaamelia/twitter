# Twitter API Credentials
# You need Twitter API v2 with elevated access for DM reading
# Apply at: https://developer.twitter.com/en/portal/dashboard

# Main bot configuration
TWITTER_BEARER_TOKEN=your_bearer_token_here

# For each account you want to manage, add credentials like this:
# Account 1
TWITTER_API_KEY_1=your_api_key_1
TWITTER_API_SECRET_1=your_api_secret_1
TWITTER_ACCESS_TOKEN_1=your_access_token_1
TWITTER_ACCESS_SECRET_1=your_access_secret_1

# Account 2
TWITTER_API_KEY_2=your_api_key_2
TWITTER_API_SECRET_2=your_api_secret_2
TWITTER_ACCESS_TOKEN_2=your_access_token_2
TWITTER_ACCESS_SECRET_2=your_access_secret_2

# Add more accounts as needed (up to 100+)
# TWITTER_API_KEY_N=...

# Bot Configuration
MIN_TOKEN_PRICE_USD=0.01
MAX_ACCOUNTS_TO_USE=100
CHECK_INTERVAL_MINUTES=15
MIN_FOLLOWERS_REQUIRED=1000
MIN_GIVEAWAY_VALUE_USD=50

# CoinGecko API (optional, for better price data)
COINGECKO_API_KEY=your_coingecko_api_key

# Database
DATABASE_URL=sqlite:///giveaways.db
