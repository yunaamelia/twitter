{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Bot Main",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Bot (Single Cycle)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/bot.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env",
      "args": []
    },
    {
      "name": "Python: Setup Verify",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/setup_verify.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Python: Statistics",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/stats.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Examples",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/examples.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Python: Current File with Args",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": ["${input:commandArgs}"],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Python: Attach",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "."
        }
      ]
    }
  ],
  "inputs": [
    {
      "id": "commandArgs",
      "type": "promptString",
      "description": "Command line arguments",
      "default": ""
    }
  ]
}
